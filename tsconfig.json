{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "CommonJS",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "ES2017",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["./*"]
    },
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }]
  },
  "include": ["src/**/*"]
}
